@model List<Event_Management.Models.Event>
@{
    ViewData["Title"] = "Списък със събития";
}

<h2>Списък със събития</h2>
<a asp-action="Create">Добавяне на ново събитие</a>

<table class="table">
    <thead>
        <tr>
            <th>Заглавие</th>
            <th>Описание</th>
            <th>Дата и час</th>
            <th>Място</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Title</td>
                <td>@ev.Description</td>
                <td>@ev.DateTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@ev.Location</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ev.Id">Редактиране</a> |
                    <a asp-action="Delete" asp-route-id="@ev.Id">Изтриване</a>
                </td>
            </tr>
        }
    </tbody>
</table>
