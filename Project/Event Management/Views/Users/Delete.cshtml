@model Event_Management.Models.UserEvent

@{
    ViewData["Title"] = "Uninvite";
}

<h1>Uninvite</h1>

<h3>Are you sure you want to uninvite this user from the event?</h3>
<div>
    <h4>UserEvent</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <form asp-action="Uninvite" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Uninvite" class="btn btn-warning" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
