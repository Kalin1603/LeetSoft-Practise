@model Event_Management.Models.UserEvent

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center mb-4">
        <h1 class="display-4 text-warning fw-bold">Edit User status</h1>
        <p class="lead text-muted">Update the invitation and the status of the user.</p>
    </div>

    <!-- Edit Form Section -->
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Form Card -->
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white text-center">
                    <h3 class="h5 mb-0">User Status Details</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserId" />

                        <!-- User Id -->
                        <div class="mb-3">
                            <label class="control-label">User name</label>
                            <input type="text" class="form-control" value="@Model.User.FirstName @Model.User.LastName" readonly />
                        </div>

                        <!-- Event Id -->
                        <div class="mb-3">
                            <label asp-for="EventId" class="control-label">Event title</label>
                            <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId"></select>
                            <span asp-validation-for="EventId" class="text-danger"></span>
                        </div>

                        <!-- Save Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back to List -->
            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-link text-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
