@model Event_Management.Models.UserEvent

@{
    ViewData["Title"] = "Invite User";
}

<h1>Invite User</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- User Dropdown -->
            <div class="form-group mb-3">
                <label for="UserId" class="form-label">Select User</label>
                <select asp-for="UserId" class="form-select">
                    <option value="">Select User</option>
                    @if (ViewData["Users"] != null)
                    {
                        var users = (IEnumerable<User>)ViewData["Users"];
                        @foreach (var user in users)
                        {
                            <option value="@user.Id">@user.FirstName @user.LastName</option> <!-- Показваме FirstName и LastName -->
                        }
                    }
                    else
                    {
                        <option disabled>No users available</option>
                    }
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- Event Dropdown -->
            <div class="form-group mb-3">
                <label for="EventId" class="form-label">Select Event</label>
                <select asp-for="EventId" class="form-select">
                    <option value="">Select Event</option>
                    @if (ViewData["Events"] != null)
                    {
                        var events = (IEnumerable<Event_Management.Models.Event>)ViewData["Events"];
                        @foreach (var ev in events)
                        {
                            <option value="@ev.Id">@ev.Title</option>
                        }
                    }
                    else
                    {
                        <option disabled>No events available</option>
                    }
                </select>
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Send Invitation" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Invitation Sent!',
                text: '@TempData["SuccessMessage"]',
            }).then((result) => {
                window.location.href = '@Url.Action("Index", "Events")';
            });
        </script>
    }

    @await Html.PartialAsync("_ValidationScriptsPartial");
}
