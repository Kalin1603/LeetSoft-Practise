@model Event_Management.Models.Event

@{
    ViewData["Title"] = "Create Event";
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center mb-4">
        <h1 class="display-4 text-primary fw-bold">Create a New Event</h1>
        <p class="lead text-muted">Fill in the details below to add your event.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <!-- Form Card -->
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="h5 mb-0">Event Details</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Title -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter event title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter event description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Date and Time -->
                        <div class="mb-3">
                            <label asp-for="DateTime" class="form-label fw-bold">Date & Time</label>
                            <input asp-for="DateTime" type="datetime-local" class="form-control" />
                            <span asp-validation-for="DateTime" class="text-danger"></span>
                        </div>

                        <!-- Location -->
                        <div class="mb-3">
                            <label asp-for="Location" class="form-label fw-bold">Location</label>
                            <input asp-for="Location" class="form-control" placeholder="Enter event location" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus-circle"></i> Create Event
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back to List -->
            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-link text-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
