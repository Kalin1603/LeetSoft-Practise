@model Event_Management.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center mb-4">
        <h1 class="display-4 text-info fw-bold">Event Details</h1>
        <p class="lead text-muted">View all the details about this event.</p>
    </div>

    <!-- Details Card -->
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white text-center">
            <h3 class="h5 mb-0">Event Information</h3>
        </div>
        <div class="card-body p-4">
            <dl class="row mb-0">
                <!-- Title -->
                <dt class="col-sm-3 fw-bold text-secondary">Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <!-- Description -->
                <dt class="col-sm-3 fw-bold text-secondary">Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <!-- Date and Time -->
                <dt class="col-sm-3 fw-bold text-secondary">Date & Time</dt>
                <dd class="col-sm-9">
                    @Model.DateTime.ToString("MMMM dd, yyyy - HH:mm")
                </dd>

                <!-- Location -->
                <dt class="col-sm-3 fw-bold text-secondary">Location</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Location)</dd>
            </dl>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="text-center mt-4">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
        }
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
}
